{
  "configurations": [
    {
      "name": "ST-Link: Debug Application",
      "cwd": "${workspaceFolder}",
      "executable": "./out/firmware.elf",
      "request": "launch",
      "type": "cortex-debug",
      "servertype": "stutil",
      "device": "STM32F411RE",
      "interface": "swd",
      "runToEntryPoint": "main",
      "showDevDebugOutput": "raw",
      "preLaunchTask": "build_debug"
    },
    {
      "name": "ST-Link: Attach to active",
      "cwd": "${workspaceFolder}",
      "executable": "./out/firmware.elf",
      "request": "attach",
      "type": "cortex-debug",
      "servertype": "stutil",
      "device": "STM32F411RE",
      "runToEntryPoint": "main",
      "interface": "swd"
    }
  ]
}
